{
  "name": "visualise-tool",
  "version": "0.1.0",
  "description": "Electron-based Monaco code editor prototype",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "start": "electron ."
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.0.1",
    "electron": "^29.3.0",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0",
    "vite": "^5.4.0"
  }
}
